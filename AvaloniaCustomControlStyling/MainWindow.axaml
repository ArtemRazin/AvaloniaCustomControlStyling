<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaCustomControlStyling.MainWindow"
        Title="AvaloniaCustomControlStyling"
		xmlns:local="using:AvaloniaCustomControlStyling"
		xmlns:controls="using:AvaloniaCustomControlStyling.Controls">

	<Window.Styles>

		<Style Selector="controls|CustomControl#StyledCustomControl">
			<Setter Property="BackgroundColor" Value="Green" />
		</Style>

	</Window.Styles>

	<controls:CustomControl x:Name="StyledCustomControl" />

</Window>
